<% layout('layouts/admin') -%>
<main>
    <section>
        <div class="rad-body-wrapper">
          <div class="container-fluid">
              <div style="width: 100%;height: 50px;background-color: #ecf0f1;">
                <h4 style="line-height: 50px;margin-left: 10px;">Quản lý phòng</h4>
            </div>
            <form action="/admin/room/<%= post.id %>?_method=PUT" method="POST">
            <div>
                <div class="col-25">
                  <label for="fname">Tiêu đề</label>
                </div>
                <div class="col-75">
                  <input type="text" id="fname" name="cate[name]" placeholder="Your name.." value="<%= post.title %>">
                </div>
            </div>
            <div style="clear: both;">
                <div class="col-25">
                  <label for="fname">Loại phòng</label>
                </div>
                <div class="col-75">
                  <input type="text" id="fname" name="cate[name]" placeholder="Your name.." value="<%= post.cate %>">
                </div>
            </div>
            <div style="clear: both;">
                <div class="col-25">
                  <label for="fname">Địa chỉ</label>
                </div>
                <div class="col-75">
                  <input type="text" id="fname" name="cate[name]" placeholder="Your name.." value="<%= post.adress %>">
                </div>
            </div>
            <div style="clear: both;">
                <div class="col-25">
                  <label for="fname">Trạng thái</label>
                </div>
                <div class="col-75">
                    <select name="phong[status]" id="tinh" size="1" required class="select-form">
                        <option value="<%= post.status %>" selected="selected"><%= post.status %></option>
                        <option value="1">Duyệt</option>
                        <option value="0">Hủy</option>
                    </select>
                </div>
            </div>
            <input type="submit">
            </form>
            </div>
          </div>
        </div>
      </section>
</main>
